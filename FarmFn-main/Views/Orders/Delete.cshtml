@model Farm.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mt-4">
    <h1 class="h3 mb-4 text-danger">Delete Order</h1>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Delete Confirmation</h5>
        </div>
        <div class="card-body">
            <h5 class="card-title text-danger">Are you sure you want to delete this order?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 fw-bold">User ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserId)</dd>
                <dt class="col-sm-3 fw-bold">Order Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.OrderDate)</dd>
                <dt class="col-sm-3 fw-bold">Total Amount</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalAmount)</dd>
                <dt class="col-sm-3 fw-bold">Payment Method</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PaymentMethod)</dd>
                <dt class="col-sm-3 fw-bold">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger me-2" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            </form>
        </div>
    </div>
</div>

@model Farm.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .product-detail img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: 8px;
    }

    .product-detail h1 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .product-detail .price {
        color: #e74c3c;
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .product-detail .description {
        color: #555;
        font-size: 1rem;
        margin-bottom: 15px;
    }

    .product-detail .stock {
        color: #28a745;
        font-size: 1rem;
        margin-bottom: 15px;
    }

    .product-detail .quantity-input {
        width: 80px;
        display: inline-block;
        margin-right: 10px;
    }
</style>

<div class="container py-5">
    <div class="row product-detail">
        <div class="col-md-6">
            @if (string.IsNullOrEmpty(Model.Image))
            {
                <img src="https://via.placeholder.com/400" alt="@Model.Name" />
            }
            else
            {
                <img src="@Model.Image" alt="@Model.Name" />
            }
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <p class="price">@Model.Price.ToString("N0") VND</p>
            <p class="description"><strong>Description:</strong> @Model.Description</p>
            <p class="stock"><strong>Stock:</strong> @Model.Stock</p>
            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="form-group">
                    <label><strong>Quantity:</strong></label>
                    <input type="number" name="quantity" value="1" min="1" max="@Model.Stock" class="form-control quantity-input" />
                </div>
                <button type="submit" class="btn btn-primary mt-2">Add to Cart</button>
            </form>
        </div>

    </div>
</div>
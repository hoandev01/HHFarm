@model Farm.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-4">
    <h1 class="h3 mb-4 text-warning">Edit User</h1>

    <div class="card">
        <div class="card-header bg-warning text-white">
            <h5 class="mb-0">Update Information</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control border-warning" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Username" class="form-label fw-bold"></label>
                    <input asp-for="Username" class="form-control border-warning" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold"></label>
                    <input asp-for="Password" type="password" class="form-control border-warning" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Role" class="form-label fw-bold"></label>
                    <input asp-for="Role" class="form-control border-warning" />
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                    <input asp-for="PhoneNumber" class="form-control border-warning" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control border-warning" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Save" class="btn btn-warning" />
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model Farm.Models.OrderDetail

@{
    ViewData["Title"] = "Delete Order Detail";
}

<div class="container mt-4">
    <h1 class="h3 mb-4 text-danger">Delete Order Detail</h1>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Delete Confirmation</h5>
        </div>
        <div class="card-body">
            <h5 class="card-title text-danger">Are you sure you want to delete this order detail?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Quantity</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>
                <dt class="col-sm-3 fw-bold">Price</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>
                <dt class="col-sm-3 fw-bold">Product</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Product.Id)</dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger me-2" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            </form>
        </div>
    </div>
</div>

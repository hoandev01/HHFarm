@model Farm.Models.OrderDetail

@{
    ViewData["Title"] = "Order Detail";
}

<div class="container mt-4">
    <h1 class="h3 mb-4 text-info">Order Detail</h1>

    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Order Detail Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Quantity</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>
                <dt class="col-sm-3 fw-bold">Price</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>
                <dt class="col-sm-3 fw-bold">Product</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Product.Id)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>
</div>

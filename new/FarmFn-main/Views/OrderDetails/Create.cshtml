@model Farm.Models.OrderDetail

@{
    ViewData["Title"] = "Add New Order Detail";
}

<div class="container mt-4">
    <h1 class="h3 mb-4 text-primary">Add New Order Detail</h1>

    <div class="card">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Order Detail Information</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="OrderId" class="form-label fw-bold"></label>
                    <select asp-for="OrderId" class="form-control border-primary" asp-items="ViewBag.OrderId"></select>
                    <span asp-validation-for="OrderId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProductId" class="form-label fw-bold"></label>
                    <select asp-for="ProductId" class="form-control border-primary" asp-items="ViewBag.ProductId"></select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label fw-bold"></label>
                    <input asp-for="Quantity" class="form-control border-primary" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-bold"></label>
                    <input asp-for="Price" class="form-control border-primary" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Add" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

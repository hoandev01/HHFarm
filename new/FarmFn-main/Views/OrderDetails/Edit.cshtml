@model Farm.Models.OrderDetail

@{
    ViewData["Title"] = "Edit Order Detail";
}

<div class="container mt-4">
    <h1 class="h3 mb-4 text-warning">Edit Order Detail</h1>

    <div class="card">
        <div class="card-header bg-warning text-white">
            <h5 class="mb-0">Update Information</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="OrderId" class="form-label fw-bold"></label>
                    <select asp-for="OrderId" class="form-control border-warning" asp-items="ViewBag.OrderId"></select>
                    <span asp-validation-for="OrderId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProductId" class="form-label fw-bold"></label>
                    <select asp-for="ProductId" class="form-control border-warning" asp-items="ViewBag.ProductId"></select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label fw-bold"></label>
                    <input asp-for="Quantity" class="form-control border-warning" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-bold"></label>
                    <input asp-for="Price" class="form-control border-warning" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Save" class="btn btn-warning" />
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

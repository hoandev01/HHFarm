@model Farm.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
    <h1 class="h3 mb-4 text-warning">Edit Product</h1>

    <div class="card">
        <div class="card-header bg-warning text-white">
            <h5 class="mb-0">Update Information</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control border-warning" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-bold"></label>
                    <input asp-for="Price" class="form-control border-warning" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Stock" class="form-label fw-bold"></label>
                    <input asp-for="Stock" class="form-control border-warning" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Image" class="form-label fw-bold"></label>
                    <input asp-for="Image" class="form-control border-warning" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <input asp-for="Description" class="form-control border-warning" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Category" class="form-label fw-bold"></label>
                    <input asp-for="Category" class="form-control border-warning" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Save" class="btn btn-warning" />
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model List<Farm.Models.Survey>

@{
    ViewData["Title"] = "Survey List";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Survey List</h1>

    <a asp-action="Create" class="btn btn-primary mb-3">Create New Survey</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cage Name</th>
                <th>Location</th>
                <th>Area (m²)</th>
                <th>Chicken Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CageName</td>
                    <td>@item.Location</td>
                    <td>@item.CageArea</td>
                    <td>@item.ChickenCount</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

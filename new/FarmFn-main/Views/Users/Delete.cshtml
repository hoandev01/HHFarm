@model Farm.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <h1 class="h3 mb-4 text-danger">Delete User</h1>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Confirm Deletion</h5>
        </div>
        <div class="card-body">
            <h5 class="card-title text-danger">Are you sure you want to delete this user?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-3 fw-bold">Username</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>
                <dt class="col-sm-3 fw-bold">Password</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Password)</dd>
                <dt class="col-sm-3 fw-bold">Role</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Role)</dd>
                <dt class="col-sm-3 fw-bold">Phone Number</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                <dt class="col-sm-3 fw-bold">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger me-2" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            </form>
        </div>
    </div>
</div>
